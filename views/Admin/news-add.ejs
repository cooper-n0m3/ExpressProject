<%- include('partitions/sidebar.ejs') %>
    <div class="col-9 position-relative">
    <div class="content-right ">
        <div class="top">
            <h5 class="fw-light text-success text-center text-uppercase">Add jong deng News</h5>
            <%- include('messages/success.ejs') %>
            <%- include('messages/error.ejs') %>
        </div>
        <div class="bottom ">
            <figure>
                <form action="addNews"  method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>Title</label>
                        <input type="text"  name="title" value="<%= (typeof rsRes!=='undefined' && rsRes.title) ? rsRes.title : '' %>" class="form-control title shadow-none">
                        <font  color="red" class="fw-bold">
                            <small>
                                <% if (typeof error !== 'undefined' && error.length > 0) { %>
                                    <% error.forEach((items)=>{ %>
                                    <%if(items.path == 'title'){%>
                                        <%=items.msg%>
                                    <%}%>
                                    <% }); %>
                                <% } %>
                            </small>
                        </font>
                    </div>
                    <div class="form-group">
                        <label>Type</label>
                        <select type="text" id="type" name="type" class="form-select shadow-none">
                            <option value="Sport" <%= (typeof rsRes!=='undefined' && rsRes.type=='Sport') ? 'selected' : '' %>>Sport</option>
                            <option value="Social" <%= (typeof rsRes!=='undefined' && rsRes.type=='Social') ? 'selected' : '' %>>Social</option>
                            <option value="Entertainment" <%= (typeof rsRes!=='undefined' && rsRes.type=='Entertainment') ? 'selected' : '' %>>Entertainment</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Category</label>
                        <select id="postCategory" name="category" class="form-select shadow-none">
                            <option value="National" <%= (typeof rsRes!=='undefined' && rsRes.category=='National') ? 'selected' : '' %>>National</option>
                            <option value="International" <%= (typeof rsRes!=='undefined' && rsRes.category=='International') ? 'selected' : '' %>>International</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Thumbnail <font color="red" class="fw-bold">(Size 350 x 200)</font></label>
                        <input type="file" id="postThumbnail" name="thumbnail" class="form-control shadow-none thubnail">
                        <font  color="red" class="fw-bold">
                            <small>
                                <% if (typeof error !== 'undefined' && error.length > 0) { %>
                                    <% error.forEach((items)=>{ %>
                                    <%if(items.path == 'thumbnail'){%>
                                        <%=items.msg%>
                                    <%}%>
                                    <% }); %>
                                <% } %>
                            </small>
                        </font>
                    </div>
                    <div class="form-group">
                        <label>Banner <font color="red" class="fw-bold">(Size 730 x 415)</font></label>
                        <input type="file" id="postBanner" name="banner" class="form-control shadow-none">
                        <font  color="red" class="fw-bold">
                            <small>
                                <% if (typeof error !== 'undefined' && error.length > 0) { %>
                                    <% error.forEach((items)=>{ %>
                                    <%if(items.path == 'banner'){%>
                                        <%=items.msg%>
                                    <%}%>
                                    <% }); %>
                                <% } %>
                            </small>
                        </font>
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <textarea id="postDes" name="description" class="form-control border-danger">
                            <%= (typeof rsRes!=='undefined' && rsRes.description) ? rsRes.description : '' %>
                        </textarea>
                        <font  color="red" class="fw-bold">
                            <small>
                                <% if (typeof error !== 'undefined' && error.length > 0) { %>
                                    <% error.forEach((items)=>{ %>
                                    <%if(items.path == 'description'){%>
                                        <%=items.msg%>
                                    <%}%>
                                    <% }); %>
                                <% } %>
                            </small>
                        </font>
                    </div>
                    <div class="form-group float-end form-bottom">
                        <a href="./" id="add-post_cancel" name="add-post_cancel" class="btn-back mb-3 ">
                            <small>Cancel</small>
                        </a>
                        <button type="submit" class="btn-submit mb-3">
                            <small>Submit</small>
                        </button>
                    </div>
                </form>
            </figure>
        </div>
    </div>
    </div>
</div>
</div>
</main>
</body>
<script src="/assets/js/ajaxRequest.js"></script>
</html>