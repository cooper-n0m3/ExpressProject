<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>News</title>
    <link rel="icon" href="https://www.svgrepo.com/show/281516/news-broadcast.svg">
    <link rel="stylesheet" href="/assets/style/authenticate.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  </head>
  <body>
        <form action="/auth/login" method="post" class="rounded-2 p-4  mt-2 ">
              <div class="mb-2 w-100 d-flex justify-content-center text-light form-top">
                  <h3 class="">login</h3>
              </div>
              <%- include('./Admin/messages/success.ejs') %>
              <%- include('./Admin/messages/error.ejs') %>
              <div class="mb-1">
                <label for="exampleInputEmail1" class="">Email address</label>
                <input type="text" name="email" value="<%= (typeof rsRes!=='undefined' && rsRes.email) ? rsRes.email : '' %>" class="form-control shadow-none h-25">
                <div id="emailHelp" class="form-text text-danger ">
                  <% if (typeof error !== 'undefined' && error.length > 0) { %>
                        <% error.forEach((items)=>{ %>
                          <%if(items.path == 'email'){%>
                            <%=items.msg%>
                          <%}%>
                        <% }); %>
                    <% } %>
                </div>
              </div>
              <div class="mb-3 password-field">
                <label for="exampleInputPassword1" class="">Password</label>
                <input type="password" name="password" value="<%= (typeof rsRes!=='undefined' && rsRes.password) ? rsRes.password : '' %>" class="form-control h-25 password shadow-none" id="exampleInputPassword1">
                <ion-icon name="eye-outline" class="eye-show"></ion-icon>
                <ion-icon name="eye-off-outline" class="eye-hidden"></ion-icon>
                <div id="emailHelp" class="form-text text-danger ">
                  <% if (typeof error !== 'undefined' && error.length > 0) { %>
                        <% error.forEach((items)=>{ %>
                          <%if(items.path == 'password'){%>
                            <%=items.msg%>
                          <%}%>
                        <% }); %>
                    <% } %>
                </div>
              </div>
            <button type="submit" class="btn btn-success float-end fs-6 w-100 mb-1"> <small>Login</small> </button>
            <p class="mb-2"><small>Dont't have an account?</small> <a href="/auth/register" class="text-primary"> <small>Register</small> </a></p>
            <button type="submit" class="btn btn-primary float-end fs-6 w-100 mb-2"><ion-icon name="logo-facebook" class="float-start fs-3"></ion-icon> <small>Login with Facebook</small> </button>
            <button type="submit" class="btn btn-dark form-btn float-end fs-6 w-100 mb-1"><img src="/images/google_icon.svg" class="float-start " width="25" alt=""> <small>Login with Google</small> </button>
            </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>   
    <!-- Ion-Icon -->
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <!-- Jquery cdn -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <!-- @Project js -->
    <script src="/assets/js/authenticate.js"></script>
  </body>  
</html>